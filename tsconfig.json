{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": false,
    "pretty": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
      "./custom_typings"
    ],
    "types": ["node", "express"],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "src/*"
      ]
  },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "files": ["./src/types/types.d.ts"]
}
